{
    "$schema": "./@types/schema/package/index.json",
    "package_version": 2,
    "name": "cocos-svg-series",
    "version": "1.0.0",
    "author": "Cinast",
    "editor": ">=3.8.7",
    "scripts": {
        "preinstall": "node ./scripts/preinstall.js",
        "build": "tsc",
        "watch": "tsc -w"
    },
    "description": "i18n:cocos-svg-series.description",
    "main": "./dist/main.js",
    "panels": {
        "svg-panel": {
            "title": "SVG Series",
            "main": "./dist/panel/index.js",
            "type": "dockable",
            "size": {
                "width": 400,
                "height": 600
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "i18n:cocos-svg-series",
                "label": "i18n:cocos-svg-series.test",
                "message": "test"
            },
            {
                "path": "i18n:cocos-svg-series",
                "label": "i18n:cocos-svg-series.import-svg",
                "message": "import-svg"
            },
            {
                "path": "i18n:cocos-svg-series",
                "label": "i18n:cocos-svg-series.render-svg-preview",
                "message": "render-svg-preview"
            }
        ],
        "messages": {
            "test": {
                "methods": [
                    "showLog"
                ]
            },
            "import-svg": {
                "methods": [
                    "importSVG"
                ]
            },
            "render-svg-preview": {
                "methods": [
                    "renderSVGPreview"
                ]
            }
        },
        "asset-db": {
            "mount": {
                "path": "./assets",
                "readonly": true,
                "visible": true
            }
        },
        "inspector": {
            "section": {
                "asset": {
                    "svg-asset": "./dist/contributions/inspector/svg-asset.js"
                }
            }
        },
        "scene": {
            "script": "./dist/scene.js"
        }
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.7",
        "@types/node": "^18.17.1",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "flubber": "^0.4.2",
        "svg.js": "^2.7.1"
    }
}
